{
  "name": "@sprucelabs/spruce-view-plugin",
  "publishConfig": {
    "access": "public"
  },
  "skill": {
    "namespace": "view",
    "blockedCommands": {
      "sync.events": "You need to use pull.event.contracts in this project!"
    },
    "commandOverrides": {
      "pull.event.contracts": "--destination ./src/tests"
    },
    "upgradeIgnoreList": [
      "@sprucelabs/mercury-core-events",
      "@types/node"
    ]
  },
  "version": "47.0.39",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "Spruce View! ðŸ‘¾",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/sspruce-view-plugin",
  "bugs": {
    "url": "https://github.com/sprucelabsai/sspruce-view-plugin/issues"
  },
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint.local": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w",
    "lint.tsc": "tsc -p . --noEmit",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "update.dependencies": "yarn run clean.dependencies && yarn"
  },
  "dependencies": {
    "@sprucelabs/error": "^6.0.16",
    "@sprucelabs/globby": "^2.0.11",
    "@sprucelabs/heartwood-view-controllers": "^110.0.32",
    "@sprucelabs/schema": "^30.0.27",
    "@sprucelabs/spruce-core-schemas": "^40.0.21",
    "@sprucelabs/spruce-event-plugin": "^62.0.24",
    "@sprucelabs/spruce-event-utils": "^40.0.25",
    "@sprucelabs/spruce-skill-booter": "^62.0.24",
    "@sprucelabs/spruce-skill-utils": "^31.0.28",
    "@sprucelabs/spruce-test-fixtures": "^62.0.24"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^6.0.14",
    "@sprucelabs/jest-json-reporter": "^8.0.18",
    "@sprucelabs/jest-sheets-reporter": "^3.0.26",
    "@sprucelabs/mercury-client": "^42.0.33",
    "@sprucelabs/mercury-types": "^47.0.23",
    "@sprucelabs/resolve-path-aliases": "^2.0.15",
    "@sprucelabs/semantic-release": "^5.0.1",
    "@sprucelabs/test": "^9.0.11",
    "@sprucelabs/test-utils": "^5.0.18",
    "@types/inquirer": "^9.0.7",
    "@types/node": "17.0.5",
    "chokidar-cli": "^3.0.0",
    "conventional-changelog-sprucelabs": "^2.0.1",
    "eslint": "^9.2.0",
    "eslint-config-spruce": "^11.2.15",
    "inquirer": "^9.2.20",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/esm/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
          "worksheetId": 843037832,
          "testMap": {
            "helpfulErrorIfVcIsBroken": "I155",
            "registersViewsOnBoot": "I162"
          }
        }
      ]
    ]
  }
}
